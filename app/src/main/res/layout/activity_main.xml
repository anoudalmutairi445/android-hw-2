<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marble"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reset"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangle_1"
        android:fontFamily="serif-monospace"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finals"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/finals"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="30%"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GradesCalculator"
        app:layout_constraintVertical_bias="0.558" />

    <EditText
        android:id="@+id/midterms"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="30%"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GradesCalculator"
        app:layout_constraintVertical_bias="0.412" />

    <EditText
        android:id="@+id/homeworks"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="25%"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GradesCalculator"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/GradesCalculator"
        android:layout_width="335dp"
        android:layout_height="41dp"
        android:layout_marginStart="177dp"
        android:layout_marginLeft="177dp"
        android:layout_marginEnd="177dp"
        android:layout_marginRight="177dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="10dp"
        android:text="@string/textview"
        android:textColor="#6A4E4E"
        android:textColorHint="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/quizzes"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="15%"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GradesCalculator"
        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:text="Quizzes:"
        android:textColor="#6A4E4E"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="47dp"
        android:paddingVertical="10dp"
        android:text="Finals:"
        android:textColor="#6A4E4E"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="35dp"
        android:paddingVertical="10dp"
        android:text="Homeworks:"
        android:textColor="#6A4E4E"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="39dp"
        android:paddingVertical="10dp"
        android:text="Midterms:"
        android:textColor="#6A4E4E"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangle_1"
        android:fontFamily="serif-monospace"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finals"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:id="@+id/result"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:text="Result"
        android:textColor="#6A4E4E"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

</androidx.constraintlayout.widget.ConstraintLayout>